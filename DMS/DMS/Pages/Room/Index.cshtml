            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RoomGeneralInfo_List)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeachersInRoom)
                </td>
                <td>
                    @Html.DisplayFor(x=>item.TAsInRoom)
                </td>
                <td>
                    @Html.DisplayFor(x => item.StudentsInRoom)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Room_Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Room_Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Room_Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>