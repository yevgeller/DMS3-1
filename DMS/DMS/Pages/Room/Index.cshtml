@page
@model DMS.Pages.Room.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rooms[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms[0].MaxCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms[0].Age_Bracket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms[0].Is_Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rooms) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age_Bracket.Name)
            </td>
            <td>
                @if (item.Is_Active)
                {<span>Yes</span> }
                else
                { <span>No</span>}
                @*@Html.DisplayFor(modelItem => item.Is_Active)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Room_Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Room_Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Room_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
