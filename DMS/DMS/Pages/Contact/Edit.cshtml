@page
@model DMS.Pages.Contact.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Contact.Contact_Id" />
            <div class="form-group">
                <label asp-for="Contact.Person_Id" class="control-label"></label>
                <span>@Model.Contact.Person.Name</span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.Value" class="control-label"></label>
                <input asp-for="Contact.Value" class="form-control" />
                <span asp-validation-for="Contact.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.Contact_Type_Id" class="control-label"></label>
                <select asp-for="Contact.Contact_Type_Id" class="form-control" asp-items="ViewBag.Contact_Type_Id"></select>
                <span asp-validation-for="Contact.Contact_Type_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
