@page
@model DMS.Pages.Person.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>System Personnel</h1>

<p>
    <a asp-page="Create">Create New Person Record</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Is_Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Person_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Person) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person_Type.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Person_Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Person_Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Person_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
