@page
@model DMS.Pages.Student.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Student.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Birthdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Birthdate) <span>(@Model.Student.Age() old)</span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Is_Active)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Student.Is_Active)
            {
                <span>Yes</span>
            }
            else
            {
                <span>No</span>
            }
        </dd>
    </dl>

    @if (!Model.Guardians.Any())
    {
        <div class="row d-flex p-2 text-md-center bg-light" style="justify-content:center; align-items:center;">
            This student has no guardians assigned.
        </div>
    }
    else
    {
        <h4>Assigned Guardians:</h4>
        <ul>
            @foreach (var p in Model.Guardians)
            {
                <li><a asp-page="/Person/Details" asp-route-id="@p.Person_Id">@p.Name</a></li>
            }
        </ul>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.Student_Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
