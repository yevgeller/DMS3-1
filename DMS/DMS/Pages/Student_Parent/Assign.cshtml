@model DMS.Pages.Student_Parent.AssignModel

@{
    ViewData["Title"] = "Assign";
    var prevDisabled = !Model.Students_List.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Students_List.HasNextPage ? "disabled" : "";
    var allPaginationDisabled = Model.Students_List.TotalPages < 2 ? "disabled" : "";

    //var tenDisabled = Model.PageSize == 10 ? "disabled" : "";
    //var twentyDisabled = Model.PageSize == 20 ? "disabled" : "";
}

<h1>Assign</h1>

<h4>Mass assignment of Parents to Students</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="row">
                <div class="col-md-11">
                    @if (Model.SelectedStudent != null)
                    {
                        @if (Model.Assigned_Parents.Any())
                        {
                            <div class="bg-warning p-3 mb-2">
                                <div><strong>@Model.SelectedStudent.Name</strong> has these guardans assigned:</div>
                                <ul>
                                    @foreach (var p in Model.Assigned_Parents)
                                    {
                                        <li>@p.Person.Name</li>
                                    }
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="bg-info p-3 mb-2"><strong>@Model.SelectedStudent.Name</strong> has no guardians assigned</div>
                        }
                        <hr />
                        <form method="post">
                            <div class="form-actions no-color">
                                <p>
                                    Find parent by name:
                                    <input type="text" asp-for="CurrentParentFilter"
                                           asp-page-handler="Lalala"
                                           name="ParentFilter" width="75" value="@Model.CurrentParentFilter" />
                                    <button type="submit" asp-page-handler="ChangedParentFilter"
                                           asp-route-selectedStudent="@Model.SelectedStudent?.Student_Id"
                                           asp-route-parentFilter="@Model.CurrentParentFilter" class="btn btn-primary"><i class="fas fa-filter"></i></button> |
                                    <a class="btn btn-info" asp-page="./Assign"
                                       asp-route-currentFilter="@Model.CurrentFilter"
                                       asp-route-selectedStudent="@Model.SelectedStudent?.Student_Id"><i class="far fa-list-alt"></i></a>
                                </p>
                            </div>
                        </form>
                        <table>
                            <tr>
                                <th>Parent</th>
                            </tr>
                            @foreach (var pa in Model.AllParents)
                            {
                                <tr>
                                    <td>
                                        @*<span class="form-check" id="@("parentSpan-" + pa.Person_Id.ToString() )" onclick="save(@(pa.Person_Id))"> *@
                                        <input type="checkbox" class="form-check-input" id="@("chb-" + pa.Person_Id.ToString() )" value="@pa.Name" onclick="save(@(pa.Person_Id))" />
                                        <label class="form-check-label" for="@("chb-" + pa.Person_Id.ToString() )">@pa.Name</label>
                                        @*</span>*@
                                    </td>
                                </tr>
                            }
                        </table>
                    }
                    @*<form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Person_Student.Person_Student_Id" />
                            <div class="form-group">
                                <label asp-for="Person_Student.Person_Id" class="control-label"></label>
                                <select asp-for="Person_Student.Person_Id" class="form-control" asp-items="ViewBag.Person_Id"></select>
                                <span asp-validation-for="Person_Student.Person_Id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Person_Student.Student_Id" class="control-label"></label>
                                <select asp-for="Person_Student.Student_Id" class="form-control" asp-items="ViewBag.Student_Id"></select>
                                <span asp-validation-for="Person_Student.Student_Id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>*@
                </div>
            </div>
        </div>
        <!-- Students list/selection -->
        <div class="col-sm-8">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @*<a asp-page="./Assign" class="sort-link" asp-route-sortOrder="@Model.NameSort" asp-route-currentFilter="@Model.CurrentFilter">Name</a>*@
                            Name
                        </th>
                        <th>
                            Birthdate
                            @*<a asp-page="./Assign" class="sort-link" asp-route-sortOrder="@Model.BirthdateSort" asp-route-currentFilter="@Model.CurrentFilter">Birthdate</a>*@
                        </th>
                        <th>
                            In Rooms
                            @*<a asp-page="./Assign" class="sort-link" asp-route-sortOrder="@Model.RoomSort" asp-route-currentFilter="@Model.CurrentFilter">In Rooms</a>*@
                        </th>
                        <th>
                            Assigned to Parents
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Students_List)
                    {
                        <tr>
                            <td>
                                @if (Model.SelectedStudent?.Student_Id == item.Student_Id)
                                {
                                    <a class="btn btn-primary disabled">Select</a>
                                }
                                else
                                {
                                    <a asp-page="./Assign" asp-route-id="@item.Student_Id"
                                       asp-route-pageIndex="@(Model.Students_List.PageIndex)"
                                       asp-route-currentFilter="@Model.CurrentFilter"
                                       asp-route-selectedStudent="@item.Student_Id"
                                       class="btn btn-primary">Select</a>
                                }
                            </td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Student_Id">@item.Student_Name</a>
                            </td>
                            <td>
                                @item.Birthdate.ToShortDateString()
                            </td>
                            <td>
                                @item.AssignedToRooms
                            </td>
                            <td>
                                @item.AssignedToParents
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <form asp-page="./Assign" method="get">
                <div class="form-actions no-color">
                    <p>
                        Find by name or room:
                        <input type="text" name="SearchString" value="@Model.CurrentFilter" />
                        <input type="submit" value="Search" class="btn btn-primary" /> |
                        <a asp-page="./Assign" asp-route-selectedStudent="@Model.SelectedStudent">Full List</a>
                    </p>
                </div>
            </form>
            <div>
                <ul class="pagination">
                    <li class="page-item @allPaginationDisabled">
                        <a asp-page="./Assign"
                           asp-route-pageIndex="1"
                           asp-route-currentFilter="@Model.CurrentFilter"
                           asp-route-selectedStudent="@Model.SelectedStudent"
                           class="page-link"><i class="fas fa-fast-backward"></i></a>
                    </li>
                    <li class="page-item @prevDisabled">
                        <a asp-page="./Assign"
                           asp-route-pageIndex="@(Model.Students_List.PageIndex - 1)"
                           asp-route-currentFilter="@Model.CurrentFilter"
                           asp-route-selectedStudent="@Model.SelectedStudent"
                           class="page-link">
                            <i class="fas fa-step-backward"></i>
                        </a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" disabled>@Model.PagerInfo</a>
                    </li>
                    <li class="page-item @nextDisabled">
                        <a asp-page="./Assign"
                           asp-route-pageIndex="@(Model.Students_List.PageIndex + 1)"
                           asp-route-currentFilter="@Model.CurrentFilter"
                           asp-route-selectedStudent="@Model.SelectedStudent"
                           class="page-link"><i class="fas fa-step-forward"></i></a>
                    </li>
                    <li class="page-item @allPaginationDisabled">
                        <a asp-page="./Assign"
                           asp-route-pageIndex="@Model.TotalPages"
                           asp-route-currentFilter="@Model.CurrentFilter"
                           asp-route-selectedStudent="@Model.SelectedStudent"
                           class="page-link"><i class="fas fa-fast-forward"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>




