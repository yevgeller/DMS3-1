@page
@model DMS.Pages.Lookups.Activity_Type.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Activity Types</h1>

<h4>Activity types is something that is recorded about a student or a group of students. It may or may not be reported to parents.</h4>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Activity_Type[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activity_Type[0].SortOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activity_Type[0].GroupingString)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Activity_Type)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SortOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupingString)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Activity_Type_Id">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Activity_Type_Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
