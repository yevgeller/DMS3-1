@page
@model DMS.Pages.Lookups.Person_Type.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit the name of this Person Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Person_Type.Person_Type_Id" />
            <div class="form-group">
                <label asp-for="Person_Type.Name" class="control-label"></label>
                <input asp-for="Person_Type.Name" class="form-control" />
                <span asp-validation-for="Person_Type.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
